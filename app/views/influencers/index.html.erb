<div class="container">
  <div class="left-container">
  <h1>Suggested Influencers</h1>
  <% @influencers.each_with_index do |influencer, index| %>
      <div class="suggested-card" id="suggested-card-<%= index %>">
        <div class="suggested-left-side">
          <div class="suggested-gradient">
            <img class="suggested-avatar" src="<%=influencer.instagram_img%>">
          </div>
        </div>
        <div class="suggested-info">
          <div class="left">
            <h3><%= influencer.full_name %></h3>
            <p><i class="fab fa-instagram"></i> <%= influencer.instagram_username %></p>
          </div>
        </div>
        <button class="add" id="suggested-btn-<%= index %>"><i class="fas fa-plus"></i></button>
      </div>
    <% end %>
  </div>
  <div class="right-container">
    <h1>Starred Influencers</h1>
    <% @influencers.each_with_index do |influencer, index| %>
      <div class="starred-card" id="starred-card-<%= index %>" style="display: none;">
        <div class="left-side">
          <div class="starred-gradient">
            <img class="starred-avatar" src="<%=influencer.instagram_img%>">
          </div>
        </div>
        <div class="starred-info">
          <div class="left">
            <h3><%= influencer.full_name %></h3>
            <p><i class="fab fa-instagram"></i> <%= influencer.instagram_username %></p>
          </div>
          <div class="right">
            <div class="followers">
              <h3><%= influencer.followers %></h3>
              <p>Followers</p>
            </div>
            <div class="engagement">
